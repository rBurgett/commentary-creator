{
  "ecmaFeatures": {
    "jsx": true
  },
  "rules": {
    "quotes": [1, "single", "avoid-escape"],
    "no-alert": 0,
    "no-console": 0,
    "camelcase": 0,
    "no-trailing-spaces": 0,
    "no-loop-func": 0
  },
  "env": {
    "browser": true,
    "amd": true,
    "node": true,
    "es6": true
  }
}
